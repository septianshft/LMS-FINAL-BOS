# ==============================================
# TALENT SYSTEM PERFORMANCE CONFIGURATION
# ==============================================

# Pagination settings
TALENTS_PER_PAGE=12
REQUESTS_PER_PAGE=15
MAX_PER_PAGE=50

# Cache TTL settings (in seconds)
TALENT_AVAILABILITY_CACHE_TTL=300
ANALYTICS_CACHE_TTL=600
TOP_TALENTS_CACHE_TTL=300
SKILL_ANALYTICS_CACHE_TTL=1800

# Search optimization
MAX_SEARCH_RESULTS=50
SEARCH_CHUNK_SIZE=100
DEFAULT_SEARCH_LIMIT=20

# Performance features
EAGER_LOAD_RELATIONSHIPS=true
ENABLE_QUERY_CACHING=true
ENABLE_AVAILABILITY_CACHE=true
BATCH_AVAILABILITY_CHECKS=true

# UI optimization
SHOW_METRICS_BY_DEFAULT=false
ENABLE_INFINITE_SCROLL=false
ASYNC_LOADING=true

# Database query optimization
DB_LOG_QUERIES=false
DB_SLOW_QUERY_LOG=true
DB_SLOW_QUERY_TIME=1.0
